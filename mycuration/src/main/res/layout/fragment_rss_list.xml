<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_all_unread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selected"
        android:orientation="horizontal"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/allIcon"
            style="@style/AppTheme.IconListItem.Icon"
            android:contentDescription="@string/all"
            android:src="@drawable/ic_view_headline_black_24dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/allUnreadFeed"
            style="@style/AppTheme.IconListItem.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/all"
            android:textSize="18sp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintStart_toEndOf="@id/allIcon"
            apps:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/allUnreadCount"
            style="@style/AppTheme.IconListItem.EndText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            tools:text="100" />

        <View
            style="@style/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintStart_toStartOf="@id/allUnreadFeed" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintTop_toBottomOf="@id/cl_all_unread">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rss"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawSelectorOnTop="true" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/no_rss_message"
        android:visibility="gone"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintTop_toBottomOf="@id/cl_all_unread"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
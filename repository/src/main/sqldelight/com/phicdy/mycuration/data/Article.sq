getCount:
SELECT COUNT(*)
FROM articles
WHERE feedId = ?;

getUnreadCount:
SELECT COUNT(*)
FROM articles
WHERE feedId = ? AND status = "unread";

deleteByFeedId:
DELETE FROM articles
WHERE feedId = ?;

updateReadStatusByTitle:
UPDATE articles
SET status = "read"
WHERE feedId = ? AND status = ? AND title LIKE ?;

updateReadStatusByUrl:
UPDATE articles
SET status = "read"
WHERE feedId = ? AND status = ? AND url LIKE ?;

